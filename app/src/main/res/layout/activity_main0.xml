<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Main0Activity">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="170dp"
            android:layout_height="161dp"
            android:layout_marginTop="58dp"
            android:src="@drawable/ic_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Join VistaCure"
            android:textColor="@color/DarkBlueMainTitle"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivLogo"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="376dp"
            android:layout_height="154dp"
            android:layout_gravity="center"
            android:layout_marginBottom="56dp"
            android:gravity="center"
            android:padding="16dp"
            android:text="Create an account to identify \npotential eye conditions and explore solutions for improved \neye health."
            android:textColor="@color/MedBlueBtnOutlineAndParagraph"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/btnGetStarted"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivLogo"
            app:layout_constraintVertical_bias="0.632" />

        <Button
            android:id="@+id/btnGetStarted"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_marginBottom="60dp"
            android:backgroundTint="@color/LightBlueButtons"
            android:text="Get started"
            android:textColor="@color/BgAndOnBtnWhite"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/btnAlreadyHaveAccount0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAlreadyHaveAccount0"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="76dp"
            android:elevation="0dp"
            android:paddingHorizontal="20dp"
            app:strokeColor="@color/LightBlueButtons"
            app:strokeWidth="5dp"
            android:paddingVertical="10dp"
            app:backgroundTint="@color/white"
            android:text="I already have an account"
            android:textColor="@color/LightBlueButtons"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

